datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
  password  String
}

model EstimateProject {
  id            Int           @id @default(autoincrement())
  clientId      Int
  clientName    ClientProject @relation(fields: [clientId], references: [id])
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  estimateHours Int
}

model ClientProject {
  id              Int               @id @default(autoincrement())
  clientName      String
  estimateProject EstimateProject[]
}
