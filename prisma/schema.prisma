datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String   @id @unique @default(uuid())
  type       Role     @default(Member)
  firstName  String
  middleName String
  lastName   String
  email      String   @unique
  password   String
  birthDate  DateTime
}

model Manager {
  id      String    @id @default(uuid())
  userId  String
  Project Project[]
}

model Member {
  id             String           @id @default(uuid())
  userId         String
  hourlyRate     String
  memberRole     MemberRole
  Member_Project Member_Project[]
  Member_Task    Member_Task[]
}

model Project {
  id             String           @id @default(uuid())
  name           String
  manager        Manager          @relation(fields: [managerId], references: [id])
  managerId      String
  Member_Project Member_Project[]
  Task           Task[]
}

model Member_Project {
  id        String  @id @default(uuid())
  project   Project @relation(fields: [projectId], references: [id])
  projectId String
  member    Member  @relation(fields: [memberId], references: [id])
  memberId  String
}

model Member_Task {
  id       String @id @default(uuid())
  task     Task   @relation(fields: [taskId], references: [id])
  taskId   String
  member   Member @relation(fields: [memberId], references: [id])
  memberId String
}

model Task {
  id              String        @id @default(uuid())
  name            String
  description     String
  project         Project       @relation(fields: [projectId], references: [id])
  projectId       String
  estimatedLength String
  Member_Task     Member_Task[]
}

enum Role {
  Member
  Manager
}

enum MemberRole {
  Front_End
  Bakc_End
  PO
  QA
}
